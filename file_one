/* 2进制密文转换为16进制 */
void bit2hex(char *dest, bool *src, int len) {
    int i;

    for (i = 0; i < len / 4; i++)
        dest[i] = 0;

    for (i = 0; i < len / 4; i++) {
        dest[i] = src[i * 4] + (src[i * 4 + 1] << 1) + (src[i * 4 + 2] << 2) + (src[i * 4 + 3] << 3);
        if ((dest[i] % 16) > 9)
            dest[i] = dest[i] % 16 + '7';
        else
            dest[i] = dest[i] % 16 + '0';
    }
}
